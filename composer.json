{
    "name": "yourname/php-auth-starter-kit",
    "description": "Reusable PHP authentication starter template",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "phpmailer/phpmailer": "^6.9",
        "pragmarx/google2fa": "^8.0",
        "bacon/bacon-qr-code": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "config": {
        "optimize-autoloader": true
    }
}
